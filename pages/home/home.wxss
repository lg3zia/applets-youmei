swiper-item image {
  width: 100%;
  height: 400rpx;
}

.company_address {
  margin: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.contact_location {
}

.contact_location image {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.img_hot {
  width: 100%;
  height: 120rpx;
}

.list_products_item {
  display: flex;
  flex-direction: row;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
}

.list_products_item .left {
  width: 30%;
  height: 150rpx;
  margin-right: 10rpx;
}

.list_products_item .right {
  display: flex;
  flex-direction: column;
}

.list_products_item .name {
  font-size: 16px;
  font-weight: bold;
}

.list_products_item .summary {
  font-size: 14px;
}
