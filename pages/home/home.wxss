/* pages/home/home.wxss */

swiper-item image {
  width: 100%;
  height: 400rpx;
}

.company_address {
  margin: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.contact_location {
}

.contact_location image {
  width: 40rpx;
  height: 40rpx;
  margin: auto 0;
  margin-right: 6px;
}

.img_hot {
  width: 100%;
  height: 120rpx;
}

.list_products_item {
  display: flex;
  flex-direction: row;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
}

.list_products_item .left {
  width: 36%;
  height: 150rpx;
  margin-right: 10px;
}

.list_products_item .right {
  display: flex;
  flex-direction: column;
  width: 60%;
}

.list_products_item .name {
  font-size: 16px;
  font-weight: bold;
}

.list_products_item .summary {
  font-size: 14px;
}

.diliver {
  background: #E0E3DA;
  width: 99%;
  margin: 0 auto;
  height: 1px;
}

.hot_product {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}
.hot_product image {
  width: 44rpx;
  height: 44rpx;
  margin: auto 0;
  margin-left: 10px;
  margin-right: 4px;
}
.hot_product text {
  display: flex;
  font-size: 18px;
  font-weight: bold;
  color: #db639b;
}