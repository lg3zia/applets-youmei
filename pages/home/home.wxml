<!--pages/home/home.wxml-->
<view>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" current="currentIndex" duration="{{duration}}" bindtap='swiperItemClick' bindchange='swiperChanged'>
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" />
      </swiper-item>
    </block>
  </swiper>
  <view class='company_address'>
    <image class="icon_location" src="../img/icon_location.png" />
    <text bindtap='goCompanyMap'>{{contact_address}}</text>
    <text class='phone_call' bindtap='callme'>{{contact_number}}</text>
  </view>
  <image src="{{img_hot}}" class='img_hot' />
  <block wx:for="{{imgUrls}}">
    <view class='products-items'>
      <image src="{{item}}" class='products-left' />
      <view class='products-right'>
        <text>项目名称</text>
        <text>项目简介</text>
      </view>
    </view>
  </block>
</view>